<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../Config/etc/system_file.xsd">
    <system>
		<tab id="webkul" translate="label" sortOrder="10">
            <label>Webkul</label>
        </tab>
        <section id="sleekaccordian" translate="label" type="text" sortOrder="320" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Sleek Accordian</label>
            <tab>webkul</tab>
            <resource>Webkul_Sleekaccordian::configuration</resource>
            <group id="parameters" translate="label" type="text" delault="1" sortOrder="5" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Parameters</label>
                <field id="rounded" translate="label comment" sortOrder="1" type="select" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Rounded</label>
                    <comment>e.g yes/no.</comment>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="auto_play" translate="label comment" sortOrder="2" type="select" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Auto Play</label>
                    <comment>e.g yes/no.</comment>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="enumerate_slides" translate="label comment"  sortOrder="4" type="select" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enumerate Slides</label>
                    <comment>e.g yes/no.</comment>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="pause_on_hover" translate="label comment" sortOrder="5" type="select" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Pause On Hover</label>
                    <comment>e.g yes/no.</comment>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="theme" translate="label comment" sortOrder="6" type="text" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Theme</label>
                    <comment>eg.can use stitch,light,dark theme.</comment>
                    <!--source_model>Webkul\Sleekaccordian\Model\Config\Source\Sleektheme</source_model-->
                    <!--source_model>Webkul\Sleekaccordian\Model\Config\Source</source_model-->
                </field>
                <field id="slide_speed" translate="label comment" sortOrder="7" type="text" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Slide Speed</label>
                    <comment>e.g 800 .</comment>
                    <validate>validate-number required-entry</validate>
                </field>
                <field id="cycle_speed" translate="label comment" sortOrder="8" type="text" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Cycle Speed</label>
                    <comment>e.g 6000 .</comment>
                    <validate>validate-number required-entry</validate>
